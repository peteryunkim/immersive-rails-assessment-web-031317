<h1>Edit Episode</h1>

<%= form_for (@episode) do |f| %>
<%= f.label :date%>
<%= f.date_field :date %><br />
<%= f.label :number, "Episode Number" %>
<%= f.number_field :number %><br />
<%= f.label :rating, "Episode Rating (1-5)"%>
<%= f.number_field :rating, min: 1, max: 5 %><br />
<%= f.label :guests %>
<%= f.collection_select :guests, Guest.all, :id, :name %>
<%= f.submit "Edit Episode" %>

<% end %>

<% if session[:id].present?  %>
<%= link_to "Delete episode", delete_episode_path %>
<%= link_to "Logout", logout_path %>
<% end %>
